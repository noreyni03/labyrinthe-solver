<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.canvas.*?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.esisar.labyrinthe.controller.MazeController"
            stylesheet="@view/styles.css">

    <!-- Top Toolbar -->
    <top>
        <ToolBar>
            <Button text="Charger" onAction="#handleLoadFile">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20"
                               image="@view/assets/load-icon.png"/>
                </graphic>
            </Button>
            <Button text="Générer" onAction="#handleGenerateMaze">
                <graphic>
                    <ImageView fitWidth="20" fitHeight="20"
                               image="@view/assets/generate-icon.png"/>
                </graphic>
            </Button>
            <Separator/>
            <ComboBox fx:id="algorithmCombo" promptText="Choisir un algorithme"/>
            <Button text="Résoudre" onAction="#handleSolve" styleClass="solve-btn"/>
            <Separator/>
            <CheckBox fx:id="animationCheck" text="Animation en temps réel"/>
        </ToolBar>
    </top>

    <!-- Center: Canvas pour le labyrinthe -->
    <center>
        <ScrollPane fx:id="scrollPane">
            <Canvas fx:id="mazeCanvas"
                    width="{scrollPane.width}"
                    height="{scrollPane.height}"/>
        </ScrollPane>
    </center>

    <!-- Bottom: Status Bar -->
    <bottom>
        <HBox styleClass="status-bar">
            <Label fx:id="statusLabel" text="Prêt"/>
            <ProgressBar fx:id="progressBar" visible="false"/>
        </HBox>
    </bottom>

</BorderPane>